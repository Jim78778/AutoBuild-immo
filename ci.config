#
# ===============================
# Target
# ===============================
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_qualcommax_ipq807x_DEVICE_swaiot_cpe_s10=y

CONFIG_ARCH_64BIT=y
CONFIG_aarch64=y

#
# ===============================
# Image
# ===============================
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_KERNEL_PARTSIZE=32
CONFIG_TARGET_ROOTFS_PARTSIZE=256

#
# ===============================
# Base system
# ===============================
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING=y
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING_HISTORY=256
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING_SAVEHISTORY=y

CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y

#
# ===============================
# Kernel / PCIe / USB
# ===============================
CONFIG_PACKAGE_kmod-pci-core=y
CONFIG_PACKAGE_kmod-pci-msi=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

#
# ===============================
# NSS (qosmio / ipq)
# ===============================
CONFIG_NSS_FIRMWARE=y

CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-dp=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-ecm-noload=y

CONFIG_PACKAGE_tc-mod-iptables=y
CONFIG_PACKAGE_kmod-ifb=y

#
# ===============================
# Firewall / Network
# ===============================
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y

#
# ===============================
# SQM (NSS version ONLY)
# ===============================
CONFIG_PACKAGE_sqm-scripts-nss=y

# ⚠️ 不要选普通 sqm-scripts
# CONFIG_PACKAGE_sqm-scripts is not set

#
# ===============================
# QModem / 5G (PCIe / USB QMI)
# ===============================
CONFIG_PACKAGE_qmodem=y
CONFIG_PACKAGE_luci-app-qmodem=y

CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y

CONFIG_PACKAGE_uqmi=y
CONFIG_PACKAGE_luci-proto-qmi=y

# 禁用冲突组件
# CONFIG_PACKAGE_modemmanager is not set
# CONFIG_PACKAGE_luci-app-modemmanager is not set

#
# ===============================
# LuCI
# ===============================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-compat=y

#
# ===============================
# LuCI Themes (稳定 & 好看)
# ===============================
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-theme-design=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

#
# ===============================
# AdGuardHome
# ===============================
CONFIG_PACKAGE_adguardhome=y
CONFIG_PACKAGE_luci-app-adguardhome=y

#
# ===============================
# ttyd (Web Terminal)
# ===============================
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_luci-app-ttyd=y

#
# ===============================
# IPv6 (推荐)
# ===============================
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_luci-proto-ipv6=y

#
# ===============================
# Utilities
# ===============================
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_pciutils=y

#
# ===============================
# Debug (safe to keep)
# ===============================
CONFIG_KERNEL_DEBUG_FS=y
CONFIG_KERNEL_DEVTMPFS=y
CONFIG_KERNEL_DEVTMPFS_MOUNT=y


#
# ===============================
# Target
# ===============================
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_qualcommax_ipq807x_DEVICE_swaiot_cpe_s10=y

CONFIG_ARCH_64BIT=y
CONFIG_aarch64=y
CONFIG_ARCH="aarch64"

#
# ===============================
# Image
# ===============================
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_EXT4_BLOCKSIZE=4096
CONFIG_TARGET_EXT4_RESERVED_PCT=0
CONFIG_TARGET_EXT4_JOURNAL=y
CONFIG_TARGET_IMAGES_GZIP=y

#
# ===============================
# Toolchain / Build
# ===============================
CONFIG_USE_MUSL=y
CONFIG_LIBC="musl"
CONFIG_GCC_VERSION="12.3.0"
CONFIG_BINUTILS_VERSION="2.40"
CONFIG_TARGET_OPTIMIZATION="-Os -pipe -mcpu=cortex-a53"
CONFIG_EXTRA_OPTIMIZATION="-fno-plt"
CONFIG_SSP_SUPPORT=y
CONFIG_MUSL_DISABLE_CRYPT_SIZE_HACK=y

#
# ===============================
# Feeds
# ===============================
CONFIG_PER_FEED_REPO=y
CONFIG_FEED_packages=y
CONFIG_FEED_luci=y
CONFIG_FEED_routing=y
CONFIG_FEED_telephony=y
CONFIG_FEED_nss_packages=y
CONFIG_FEED_sqm_scripts_nss=y

#
# ===============================
# Base system
# ===============================
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_iproute2=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-nf-conntrack=y
CONFIG_PACKAGE_kmod-nf-flow=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-reject=y

#
# ===============================
# USB / PCI / 基础工具
# ===============================
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-pci=y

CONFIG_PACKAGE_lsusb=y
CONFIG_PACKAGE_lspci=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_pciutils=y

#
# ===============================
# Kernel features（容器 / 代理 / 高级网络）
# ===============================
CONFIG_KERNEL_NAMESPACES=y
CONFIG_KERNEL_USER_NS=y
CONFIG_KERNEL_PID_NS=y
CONFIG_KERNEL_NET_NS=y
CONFIG_KERNEL_SECCOMP=y
CONFIG_KERNEL_SECCOMP_FILTER=y
CONFIG_KERNEL_IPV6=y
CONFIG_KERNEL_IPV6_MULTIPLE_TABLES=y

#
# ===============================
# LuCI
# ===============================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

#
# ===============================
# QModem（核心）
# ===============================
CONFIG_PACKAGE_luci-app-qmodem=y
CONFIG_PACKAGE_luci-app-qmodem-hc=y
CONFIG_PACKAGE_luci-app-qmodem-mwan=y
CONFIG_PACKAGE_luci-app-qmodem-sms=y
CONFIG_PACKAGE_luci-app-qmodem-ttl=y

CONFIG_PACKAGE_luci-app-qmodem_INCLUDE_vendor-qmi-wwan=y
CONFIG_PACKAGE_luci-app-qmodem_USE_TOM_CUSTOMIZED_QUECTEL_CM=y
CONFIG_PACKAGE_luci-app-qmodem_INCLUDE_ADD_PCI_SUPPORT=y
CONFIG_PACKAGE_luci-app-qmodem_INCLUDE_ADD_MTK_T7XX_SUPPORT=y
CONFIG_PACKAGE_luci-app-qmodem_INCLUDE_ADD_QFIREHOSE_SUPPORT=y

#
# ===============================
# 网络增强 / 加速
# ===============================
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_NFT_FULLCONE=y

CONFIG_PACKAGE_kmod-tcp-bbr=y

#
# ===============================
# DNS 加速
# ===============================
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-app-smartdns_INCLUDE_WebUI=y
CONFIG_PACKAGE_smartdns=y

#
# ===============================
# 多 WAN / QoS
# ===============================
CONFIG_PACKAGE_mwan3=y
CONFIG_PACKAGE_luci-app-mwan3=y

CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_tc=y
CONFIG_PACKAGE_kmod-ifb=y

#
# ===============================
# DDNS
# ===============================
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts-services=y

#
# ===============================
# 代理 / 科学上网（体积可控）
# ===============================
CONFIG_PACKAGE_sing-box=y
CONFIG_PACKAGE_luci-app-sing-box=y

#
# ===============================
# Web / 运维
# ===============================
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y

CONFIG_PACKAGE_luci-app-statistics=y
CONFIG_PACKAGE_collectd=y
CONFIG_PACKAGE_collectd-mod-interface=y
CONFIG_PACKAGE_collectd-mod-cpu=y
CONFIG_PACKAGE_collectd-mod-memory=y
CONFIG_PACKAGE_collectd-mod-network=y

#
# ===============================
# Rclone（保留，但不额外堆插件）
# ===============================
CONFIG_PACKAGE_rclone=y
CONFIG_PACKAGE_luci-app-rclone=y

#
# ===============================
# iStoreOS 软件商店（兼容）
# ===============================
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_store=y

#
# ===============================
# 禁用旧时代包（确保 apk-only）
# ===============================
# CONFIG_PACKAGE_opkg is not set
# CONFIG_PACKAGE_ipkg is not set

